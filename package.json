{
  "name": "merkur",
  "version": "0.0.1",
  "description": "",
  "main": "lib/merkur",
  "module": "lib/merkur",
  "scripts": {
    "preversion": "npm test && npm run lint && npm run build",
    "postversion": "npm run build && npm run changelog && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish",
    "lint": "node_modules/.bin/eslint -c ./.eslintrc.js --fix './**/*.{js,jsx}' --ignore-path ./.prettierignore",
    "test": "node_modules/.bin/jest --no-watchman",
    "build": "node_modules/.bin/rollup -c",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "commit": "node_modules/.bin/git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjancarik/merkur.git"
  },
  "keywords": [
    "micro frontends",
    "microservices",
    "widget",
    "SSR"
  ],
  "author": "Miroslav Jancarik",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mjancarik/merkur/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/mjancarik/merkur#readme",
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/plugin-transform-modules-commonjs": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.31",
    "coveralls": "^3.0.9",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "rollup": "^1.32.0",
    "rollup-plugin-terser": "^5.2.0"
  },
  "jest": {
    "bail": false,
    "verbose": true,
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx}"
    ],
    "modulePaths": [
      "<rootDir>/"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "precommit": "npm run lint",
      "commitmsg": "node_modules/.bin/commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {}
}
